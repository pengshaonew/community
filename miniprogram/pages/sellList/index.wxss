/* pages/sell/index.wxss */
.listItem{
    display: flex;
    color:#333;
    margin: 0 20rpx 20rpx 20rpx;
}

.listItem_L{
    width:240rpx;
    height: 160rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 16rpx;
}

.listItem_L > image{
    width:100%;
    max-height: 100%;
    border-radius: 6rpx;
}

.listItem_R{
    flex:1;
}

.listItem_R_title{
    font-size:28rpx;
    color:#3a3a3a;
}

.listItem_R_desc{
    font-size:24rpx;
    line-height: 64rpx;
    height: 64rpx;
}

.listItem_R_price{
    font-size:24rpx;
    color:red;
}

