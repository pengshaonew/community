/* pages/houseDetail/index.wxss */

.maninUrl {
    height: 100%;
}

.main {
    padding: 20rpx 40rpx;
}

.title {
    font-size: 36rpx;
    color: #333;
    min-height: 64rpx;
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.item {
    font-size: 28rpx;
    color: #676565;
    align-items: center;
    margin-bottom: 20rpx;
}

.item text{
    font-size: 28rpx;
    padding: 10rpx 40rpx;
    margin-right: 20rpx;
    color: #fff;
    border-radius: 6rpx;
}

.item .demand {
    background: #6891fb;
}

.item .transferWay {
    background: #b32ef1;
}

.price text {
    color: red;
}

.phone {
    display: flex;
    justify-content: center;
}

.phone .phoneBtn {
    background: #0d9bff;
    border-radius: 8rpx;
    color: #fff;
    text-align: center;
    width: 368rpx;
    height: 80rpx;
    font-size: 32rpx;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
}

.handleDel {
    font-size:32rpx;
    color: #fff;
    background: #ff5858;
}
.handleStatus{
    font-size:32rpx;
}