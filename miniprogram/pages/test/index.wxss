/* pages/test/index.wxss */

page {
    display: flex;
    flex-direction: column;
    height: 100%;
}
.result-item {
    display: flex;
    flex-direction: column;
    padding: 20rpx 0 20rpx 110rpx;
    overflow: hidden;
    border-bottom: 2rpx solid #e5e5e5;
}
.title {
    height: 110rpx;
}
.loading {
    position: relative;
    bottom: 5rpx;
    padding: 10rpx;
    text-align: center;
}

.header{
    background: #1a8ae2;
    padding: 20rpx 10rpx;
    display: flex;
    align-items: center;
}
.header input{
    background: #fff;
    width: 400rpx;
    border-radius: 32rpx;
    padding-left: 20rpx;
    font-size: 28rpx;
    margin-left: 20rpx;
    height: 64rpx;
}
.header .city{
    color: #fff;
}