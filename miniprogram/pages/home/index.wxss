/**index.wxss**/

page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.loading {
    position: relative;
    bottom: 5rpx;
    padding: 10rpx;
    text-align: center;
}

.banner {
    width: 100%;
    height: 380rpx;
    position: relative;
    display: none;
}

.banner image {
    width: 100%;
}

.nav {
    width: 100%;
    height: 100rpx;
    display: flex;
    background: #fff;
    margin-bottom: 20rpx;
}

.navItem {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}

.navItemSelected {
    color: #05c494;
}

.listItem {
    display: flex;
    color: #333;
    background: #fff;
    padding: 20rpx;
    border-bottom: 4px solid #e8e8e8;
}

.listItem_L {
    width: 240rpx;
    height: 160rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 16rpx;
    user-select: none;
}

.listItem_L > image {
    width: 100%;
    max-height: 100%;
    border-radius: 6rpx;
}

.listItem_R {
    flex: 1;
    user-select: none;
}

.listItem_R_title {
    font-size: 28rpx;
    color: #3a3a3a;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    min-height: 60rpx;
}

.listItem_R_desc {
    font-size: 28rpx;
    line-height: 64rpx;
    height: 64rpx;
}

.other {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20rpx;
    line-height: 60rpx;
    text-indent: 66rpx;
    background: #fff;
}

.other image {
    width: 240rpx;
    height: 360rpx;
}

scroll-view{
    height: calc(100% - 100rpx);
}

.header{
    background: #1a8ae2;
    padding: 20rpx 10rpx;
    display: flex;
    align-items: center;
}
.header input{
    background: #fff;
    width: 400rpx;
    border-radius: 32rpx;
    padding-left: 20rpx;
    font-size: 28rpx;
    margin-left: 20rpx;
    height: 64rpx;
}
.header .city{
    color: #fff;
}

.tagBox text{
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  margin-right: 20rpx;
  color: #fff;
  border-radius: 6rpx;
}

.tagBox .demand {
  background: #6891fb;
}

.tagBox .transferWay {
    background: #b32ef1;
}

.tagBox .price {
  font-size: 24rpx;
  color: red;
  padding: 0;
    margin-right: 60rpx;
}