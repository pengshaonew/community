/**index.wxss**/

page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.loading {
    position: relative;
    bottom: 5rpx;
    padding: 10rpx;
    text-align: center;
}

.banner {
    width: 100%;
    height: 380rpx;
    position: relative;
    display: none;
}

.banner image {
    width: 100%;
}

.city {
    /*position: absolute;*/
    left: 0;
    top: 0;
    color: #fff;
    background: rgba(0, 0, 0, .3);
    right: 0;
    padding-left: 10rpx;
    height: 60rpx;
}

.nav {
    width: 100%;
    height: 100rpx;
    display: flex;
    background: #fff;
    margin-bottom: 20rpx;
}

.navItem {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}

.navItemSelected {
    color: #05c494;
}

.listItem {
    display: flex;
    color: #333;
    background: #fff;
    padding: 20rpx;
    border-bottom: 1px solid #e6e6e6;
}

.listItem_L {
    width: 240rpx;
    height: 160rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 16rpx;
    user-select: none;
}

.listItem_L > image {
    width: 100%;
    max-height: 100%;
    border-radius: 6rpx;
}

.listItem_R {
    flex: 1;
    user-select: none;
}

.listItem_R_title {
    font-size: 28rpx;
    color: #3a3a3a;
}

.listItem_R_desc {
    font-size: 24rpx;
    line-height: 64rpx;
    height: 64rpx;
}

.listItem_R_price {
    font-size: 24rpx;
    color: red;
}

.other {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20rpx;
    line-height: 60rpx;
    text-indent: 66rpx;
    background: #fff;
}

.other image {
    width: 240rpx;
    height: 360rpx;
}

scroll-view{
    height: calc(100% - 180rpx);
}