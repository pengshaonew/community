/**index.wxss**/

page {
  background: #f6f6f6;
}

.banner {
  width:100%;
  height:380rpx;
  margin-bottom: 30rpx;
}

.banner image {
  width:100%;
}

.nav {
  width:100%;
  height: 100rpx;
  display: flex;
}

.navItem {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:28rpx;
}

.navItemSelected{
  color:#05c494;
}

.userList{
    padding:0 20rpx;
}

.userItem{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.userItem image{
  width:80rpx;
  height:80rpx;
}

.userItem text{
    font-size:28rpx;
    color:#333;
}
.listItem{
    display: flex;
    color:#333;
    margin: 0 20rpx 20rpx 20rpx;
}

.listItem_L{
    width:240rpx;
    height: 160rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 16rpx;
    user-select: none;
}

.listItem_L > image{
    width:100%;
    max-height: 100%;
    border-radius: 6rpx;
}

.listItem_R{
    flex:1;
    user-select: none;
}

.listItem_R_title{
    font-size:28rpx;
    color:#3a3a3a;
}

.listItem_R_desc{
    font-size:24rpx;
    line-height: 64rpx;
    height: 64rpx;
}

.listItem_R_price{
    font-size:24rpx;
    color:red;
}

.other{
  display: flex;
  align-items: center;
  justify-content: center;
}

.other image{
  width: 240rpx;
  height:360rpx;
}
