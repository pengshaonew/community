/* pages/addPublish/index.wxss */
.addPublish{
    padding-bottom: 80rpx;
}
.submitBtn {
    margin-top: 20rpx;
    font-size: 28rpx;
}

.weui-cells {
    font-size: 30rpx;
}

.weui-cells__group_form .weui-cell {
    padding: 20rpx;
}

.weui-label {
    max-width:auto;
}

.weui-textarea {
    height: 160px;
    background: #f5f5f5;
    padding: 10rpx 0 0 10rpx;
    box-sizing: border-box;
}

.imgBox {
    padding: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.imgBox .img {
    width: 200rpx;
    margin: 0 10rpx 10rpx 0;
}

.itemImg {
    position: relative;
}

.itemImg .del {
    position: absolute;
    top: 0;
    right: 0;
    width: 40rpx;
    height: 40rpx;
    z-index: 1;
    background: #fff;
    border-radius: 50%;
}

.addImg {
    border: 1px solid #ccc;
    width: 200rpx;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #999;
    justify-content: center;
}

.addImg image {
    height: 80rpx;
}
.radio-group{
    display: flex;
}